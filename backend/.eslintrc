{
    "env": {
      "node": true,
      "jest": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "quotes": ["warn", "single"],
      "indent": ["warn", 2],
      "no-tabs": ["warn"]
    }
  }